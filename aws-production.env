# ðŸŽ¯ AWS Production Environment Configuration
# Copy these settings to your /var/www/html/bakery-app/.env file

APP_NAME="BakeHub"
APP_ENV=production
APP_KEY=base64:YOUR_GENERATED_KEY_WILL_BE_HERE
APP_DEBUG=false
APP_URL=http://YOUR_EC2_PUBLIC_IP

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bakery_db
DB_USERNAME=bakery_user
DB_PASSWORD=YourStrongPassword123!

# Cache & Session Configuration
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (optional - configure later)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=admin@bakehub.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (if using S3 for file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Production Logging
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# Security Settings
SANCTUM_STATEFUL_DOMAINS=YOUR_EC2_PUBLIC_IP,your-domain.com
SPA_URL=http://YOUR_EC2_PUBLIC_IP
